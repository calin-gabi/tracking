{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "resources/public/js",
        "rootDir": "src/tracking/ts"
    },
    "exclude": [
        "node_modules",
        "node_modules/@typings",
        "node_modules/@types",
        "resources",
        "typings"
    ]
}
